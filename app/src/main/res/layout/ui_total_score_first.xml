<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/page_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/total_score"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/name_total_complete_grade"
            android:textColor="@color/colorPrimaryBlack"
            android:textSize="15sp" />

        <az.plainpie.PieView xmlns:plainpie="http://schemas.android.com/apk/res-auto"
            android:id="@+id/total_score_pie"
            android:layout_width="94dp"
            android:layout_height="94dp"
            plainpie:inner_pie_padding="40"
            plainpie:inner_text="0.0"
            plainpie:percentage="1"
            plainpie:percentage_size="22" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/name_total_avg_grade"
            android:textColor="@color/colorPrimaryBlack"
            android:textSize="15sp" />

        <az.plainpie.PieView xmlns:plainpie="http://schemas.android.com/apk/res-auto"
            android:id="@+id/total_average_pie"
            android:layout_width="94dp"
            android:layout_height="94dp"
            plainpie:inner_pie_padding="40"
            plainpie:inner_text="0.0"
            plainpie:percentage="1"
            plainpie:percentage_size="22" />
    </LinearLayout>
</LinearLayout>