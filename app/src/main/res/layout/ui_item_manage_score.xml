<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13sp"
            android:text="성적"
            android:layout_alignParentRight="true"
            android:id="@+id/content_manage_score"
            android:layout_width="28dp"
            android:textColor="@color/colorPrimaryBlack"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="13sp"
            android:text="학점"
            android:id="@+id/content_manage_unit"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/content_manage_score"
            android:textColor="@color/colorPrimaryBlack"
            android:layout_width="28dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="13sp"
            android:id="@+id/content_manage_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구분"
            android:textColor="@color/colorPrimaryBlack"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="12dp"/>
        <TextView
            android:textSize="13sp"
            android:id="@+id/content_manage_name"
            android:layout_toRightOf="@id/content_manage_classify"
            android:text="웹 프로그래밍"
            android:textColor="@color/colorPrimaryBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/scoredivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"/>
</LinearLayout>