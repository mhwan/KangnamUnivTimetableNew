<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:weightSum="3">

    <LinearLayout
        android:padding="8dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_box"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제 1열람실"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체 좌석수"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/library_usage_total_textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryBlack"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이용 좌석수"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/library_usage_used_textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryBlack"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남은 좌석수"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/library_usage_empty_textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryBlack"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <az.plainpie.PieView xmlns:plainpie="http://schemas.android.com/apk/res-auto"
                android:id="@+id/usage_pie_1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                plainpie:inner_pie_padding="116"
                plainpie:inner_text="0%"
                plainpie:percentage="1"
                plainpie:percentage_size="19" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_box"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제 2열람실"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체 좌석수"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/library_usage_total_textview_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryBlack"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이용 좌석수"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/library_usage_used_textview_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryBlack"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남은 좌석수"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/library_usage_empty_textview_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryBlack"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <az.plainpie.PieView xmlns:plainpie="http://schemas.android.com/apk/res-auto"
                android:id="@+id/usage_pie_2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                plainpie:inner_pie_padding="116"
                plainpie:inner_text="0%"
                plainpie:percentage="1"
                plainpie:percentage_size="19" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_box"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제 3열람실"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체 좌석수"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/library_usage_total_textview_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryBlack"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이용 좌석수"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/library_usage_used_textview_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryBlack"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남은 좌석수"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/library_usage_empty_textview_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryBlack"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <az.plainpie.PieView xmlns:plainpie="http://schemas.android.com/apk/res-auto"
                android:id="@+id/usage_pie_3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                plainpie:inner_pie_padding="116"
                plainpie:inner_text="0%"
                plainpie:percentage="1"
                plainpie:percentage_size="19" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>